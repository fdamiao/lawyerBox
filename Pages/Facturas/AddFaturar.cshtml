@page
@model WeblawyersBox.Pages.Facturas.AddFaturarModel

@{
    ViewData["Title"] = "AddFaturar";
}

<h1>AddFaturar</h1>

<h4>detalhesCobranca</h4>
<hr />

   
<form method="post">
    
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text"><i class="fa fa-file-invoice"></i> Facturar </h5>
                <div class="f-right">
                    <div class="btn-group dropdown-split-primary">
                        <button type="button" id="addRow" class="btn btn-primary"><i class="icofont icofont-plus"></i>Adicionar</button>

                    </div>
                    @*<button  type="button" class="btn btn-info">Add</button>*@
                </div>
            </div>
            <div class="card-block ">
                <div class="row">
                    <div class="col-lg-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">

                            <textarea asp-for="detalhesCobranca.descricao" class="form-control" placeholder="Descricao"></textarea>
                            <span asp-validation-for="detalhesCobranca.descricao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <div class="form-group">

                            <input asp-for="detalhesCobranca.Qty" class="form-control" placeholder="Quantidade" />
                            <span asp-validation-for="detalhesCobranca.Qty" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">

                            <input asp-for="detalhesCobranca.precoUnit" class="form-control" placeholder="P unit" />
                            <span asp-validation-for="detalhesCobranca.precoUnit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="form-group">

                        <input asp-for="detalhesCobranca.idprocesso" class="form-control" hidden="hidden" value="@Request.Query["id"]" />

                    </div>


                    <div class="form-group">

                        <input asp-for="detalhesCobranca.iduser" value="@User.Identity.Name" hidden="hidden" class="form-control" />

                    </div>

                </div>
            </div>
        </div>
</form>
<div class="col-lg-12">
    <div class="card">
        
        <div class="card-block">
            <table class="table display">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ListCobrancaTB[0].descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ListCobrancaTB[0].Qty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ListCobrancaTB[0].precoUnit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ListCobrancaTB[0].precTotal)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.ListCobrancaTB[0].iduser)
                        </th>
                       
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListCobrancaTB)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.precoUnit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.precTotal)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.iduser)
                            </td>
                           
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.idcobranca">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.idcobranca">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.idcobranca">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
