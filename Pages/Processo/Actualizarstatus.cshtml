@model WeblawyersBox.Pages.Processo.ActualizarstatusModel

@{
    ViewData["Title"] = "Actualizarstatus";
}



<h4>Estatus Process</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-header-text"><i class="fa fa-file-invoice"></i> Actualizarstatus </h5>
               
                    @*<button  type="button" class="btn btn-info">Add</button>*@
                </div>
            
            <div class="card-block ">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EstatusProcess.status" class="control-label"></label>
                        <select asp-for="EstatusProcess.status" class="form-control" asp-items="@Html.GetEnumSelectList<estadoss>()"></select>
                        <span asp-validation-for="EstatusProcess.status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EstatusProcess.descricao" class="control-label"></label>
                        <input asp-for="EstatusProcess.descricao" class="form-control" />
                        <span asp-validation-for="EstatusProcess.descricao" class="text-danger"></span>
                    </div>
                   
                    @*<div class="form-group">
                        <label asp-for="EstatusProcess.Ids" class="control-label"></label>
                        <input asp-for="EstatusProcess.Ids" class="form-control" />
                        <span asp-validation-for="EstatusProcess.Ids" class="text-danger"></span>
                    </div>*@
                   
                  
                    <div class="form-group">
                        <label asp-for="EstatusProcess.responsavel" class="control-label"></label>
                        <input asp-for="EstatusProcess.responsavel" class="form-control" value="@User.Identity.Name" />
                        <span asp-validation-for="EstatusProcess.responsavel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>

        <div>
            <a asp-page="Index">Voltar</a>
        </div>

