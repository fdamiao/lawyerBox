@model EstatusProcess
<div class="modal fade" id="add-contact" tabindex="-1" role="dialog" aria-labelledby="SalvarStatos" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addContactLabel">Atribuir estatus</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-page-handler="/Actualizarstatus/AtualizarStatus">
                   
                    <div class="form-group">
                        <label asp-for="@Model.status" class="control-label"></label>
                        <select asp-for="status" asp-items="@Html.GetEnumSelectList<estadoss>()" class="form-control"></select>
                        <span asp-validation-for="status" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="descricao"></label>
                        <textarea asp-for="descricao" class="form-control"></textarea>
                        <span asp-validation-for="descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Idprocesso"></label>
                        <input asp-for="Idprocesso" class="form-control" value=@ViewBag.Idprocesso />
                        <span asp-validation-for="Idprocesso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Iduser"></label>
                        <input asp-for="@Model.Iduser" class="form-control" value="@User.Identity.Name" />
                        <span asp-validation-for="Iduser" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>