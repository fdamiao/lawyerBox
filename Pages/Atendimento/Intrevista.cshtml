@page
@model WeblawyersBox.Pages.Atendimento.IntrevistaModel

@{
    ViewData["Title"] = "Intrevista";
}

<h1>Intrevista</h1>

<h4>Intrevistas</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">Detahes do atendimento</div>
            <div class="card-block">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">

                        <input asp-for="Intrevistas.idprocesso" class="form-control" value="@Request.Query["id"]" hidden="hidden" />

                        <div class="form-group">
                            <label asp-for="Intrevistas.dataConverca" class="control-label"></label>
                            <input asp-for="Intrevistas.dataConverca" class="form-control" />
                            <span asp-validation-for="Intrevistas.dataConverca" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Intrevistas.DescricaoActividade" class="control-label"></label>
                        <textarea asp-for="Intrevistas.DescricaoActividade" class="form-control" id="summernote"></textarea>
                        <span asp-validation-for="Intrevistas.DescricaoActividade" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <input asp-for="Intrevistas.Iduser" class="form-control" value="@User.Identity.Name" hidden="hidden" />

                    </div>

                    <div class="form-group">
                        <button type="submit" value="Create" class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
                        <a asp-page="/Processo/Details" asp-route-id="@Request.Query["id"]" class="btn btn-secondary"><i class="fa fa-backward"></i> voltar</a>

                    </div>
                </form>
                </div>

    </div>
        </div>
</div>

