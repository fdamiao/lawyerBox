@page
@model WeblawyersBox.Pages.Funcionarios.RegistrarModel
@{
    ViewData["Title"] = "Register";
    // If an employee does not have a photo display noimage.png
   // var photoPath = "~/images/" + "seu-logo-aqui.png";

}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.nome"></label>
                <input asp-for="Input.nome" class="form-control" />
                <span asp-validation-for="Input.nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.apelido"></label>
                <input asp-for="Input.apelido" class="form-control" />
                <span asp-validation-for="Input.apelido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Input.Permissao"></label>
                <select asp-for="Input.Permissao" class="form-control">
                    <option value="">-- escolha Permissao --</option>
                    <option value="Administrador">Admin</option>
                    <option value="Advogado">Advogado</option>
                    <option value="Simples">Simples</option>
                </select>
                <span asp-validation-for="Input.Permissao" class="text-danger"></span>
            </div>
           
           
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
